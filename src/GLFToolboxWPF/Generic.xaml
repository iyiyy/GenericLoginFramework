<UserControl x:Class="GLFToolboxWPF.Generic"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="76.271" d:DesignWidth="199.894">
    <Grid>
        <TextBox x:Name="usernameBox" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="Username" VerticalAlignment="Top" Width="200"/>
        <PasswordBox x:Name="passwordBox" HorizontalAlignment="Left" Margin="0,28,0,0" VerticalAlignment="Top" Height="23" Width="200"/>
        <Button x:Name="loginBtn" Content="Login" HorizontalAlignment="Left" Margin="125,56,0,0" VerticalAlignment="Top" Width="75" Click="loginBtn_Click"/>
    </Grid>
</UserControl>
